<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radio_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="br.com.pedrazzani.android.quizmatematico.MainActivity">

    <RadioButton
        android:id="@+id/alternativa_1_radio_button"
        style="@style/RadioButtonStyle"
        android:text="@string/resposta_1" />

    <RadioButton
        android:id="@+id/alternativa_2_radio_button"
        style="@style/RadioButtonStyle"
        android:text="@string/resposta_2" />

    <RadioButton
        android:id="@+id/alternativa_3_radio_button"
        style="@style/RadioButtonStyle"
        android:text="@string/resposta_3" />
</RadioGroup>